$('.notice').html("<%= notice %>");
$('.alert').html("<%= alert %>");

<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |msg| %>
    $('#answer_validations_errors').append('<p><%= msg %>');
  <% end %>
<% else %>
  $('.answer_body_id_<%= @answer.id %>').html('<%= j @answer.body %>');
  $('form#edit-answer-<%= @answer.id%>').hide();
  $('.edit-answer-link').show();
<% end %>